[root@stapp02 ~]# id stark
id: ‘stark’: no such user
[root@stapp02 ~]# cat /etc/passwd | grep stark
[root@stapp02 ~]# useradd -G nautilus_admin_users stark
[root@stapp02 ~]# id stark
uid=1002(stark) gid=1003(stark) groups=1003(stark),1002(nautilus_admin_users)
[root@stapp02 ~]# 


[root@stapp03 ~]# groupadd nautilus_admin_users
[root@stapp03 ~]# id stark
id: ‘stark’: no such user
[root@stapp03 ~]# useradd -G nautilus_admin_users stark
[root@stapp03 ~]# id stark
